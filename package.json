{
    "name": "simple-html",
    "version": "4.0.0-next.2",
    "description": "UI components without dependencies",
    "scripts": {
        "start": "ts-node config_devserver",
        "build:all": "node ./scripts/build",
        "clean:dist": "node ./scripts/clean",
        "sync": "node ./scripts/syncPackages",
        "publish:all": "node ./scripts/publish",
        "publish:test": "node ./scripts/publishTest",
        "typecheck": "node typecheck",
        "eslint": "npm run eslint:run:packages && npm run eslint:run:samples",
        "eslint:run:packages": "eslint --fix ./packages/**/*.ts",
        "eslint:run:samples": "eslint --fix ./samples/**/*.ts",
        "prettier:run": "prettier --write \"packages/**/*.ts\" \"samples/**/*.ts\"",
        "test": "jest",
        "test:watch": "jest --watch ",
        "test-ci": "jest",
        "coverage": "jest --collectCoverage",
        "rollup": "rollup -c",
        "release": "standard-version",
        "release-test": "standard-version  --dry-run",
        "release:minor": "standard-version --release-as minor",
        "release:patch": "standard-version --release-as patch",
        "release:major": "standard-version --release-as major",
        "release:next": "standard-version --prerelease next",
        "prepare": "husky install",
        "typedoc-grid": "npx typedoc --tsconfig tsconfig-typedoc.json --excludeNotDocumented --excludeExternals --excludePrivate --excludeInternal --cleanOutputDir --out docs/grid ./packages/grid/src/index.ts",
        "typedoc-ds": "npx typedoc --tsconfig tsconfig-typedoc.json --excludeNotDocumented --excludeExternals --excludePrivate --excludeInternal --cleanOutputDir --out docs/datasource ./packages/datasource/src/index.ts"
    },
    "author": "Vegar Ringdal",
    "license": "MIT",
    "standard-version": {},
    "devDependencies": {
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "@types/jest": "^27.0.3",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "esbuild": "^0.14.0",
        "esbuild-helpers": "0.0.9",
        "eslint": "^8.3.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "jsdom": "^18.1.1",
        "lint-staged": "^12.1.2",
        "prettier": "^2.5.0",
        "standard-version": "^9.3.2",
        "ts-jest": "^27.0.7",
        "ts-node": "^10.4.0",
        "typedoc": "^0.22.10",
        "typescript": "^4.5.2"
    }
}
