{
    "name": "simple-html",
    "version": "1.0.0-alpha.10",
    "description": "lit html tools",
    "scripts": {
        "build:all": "node ./scripts/build && node ./scripts/syncPackages",
        "clean:dist": "node ./scripts/clean",
        "sync": "node ./scripts/syncPackages",
        "publish:all": "node ./scripts/publish",
        "publish:test": "node ./scripts/publishTest",
        "sample:core": "node ./samples/core-sample/fuse",
        "sample:grid": "node ./samples/grid-sample/fuse",
        "sample:grid:build": "node ./samples/grid-sample/fuse dist",
        "sample:router": "node ./samples/router-sample/fuse",
        "eslint": "npm run eslint:run:packages && npm run eslint:run:samples",
        "eslint:run:packages": "./node_modules/.bin/eslint --fix ./packages/**/*.ts",
        "eslint:run:samples": "./node_modules/.bin/eslint --fix ./samples/**/*.ts",
        "prettier:run": "node ./node_modules/prettier/bin-prettier --write \"packages/**/*.{json,md,ts}\" \"samples/**/*.{json,md,ts}\""
    },
    "author": "vegar Ringdal",
    "license": "MIT",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@types/marked": "^0.7.3",
        "autoprefixer": "^9.7.6",
        "custom-elements-hmr-polyfill": "^1.0.0",
        "fuse-box": "^4.0.0-next.424",
        "fuse-box-typechecker": "^3.0.0-next.31",
        "husky": "^4.2.3",
        "lint-staged": "^10.1.2",
        "lit-html": "^1.2.1",
        "marked": "^0.8.2",
        "prettier": "^2.0.4",
        "tailwindcss": "^1.2.0",
        "tslib": "^1.11.1",
        "typescript": "^3.8.3",
        "@typescript-eslint/eslint-plugin": "^2.27.0",
        "@typescript-eslint/parser": "^2.27.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.2"
    },
    "dependencies": {}
}
